{
  "manifest_version": 2,
  "name": "GitLab Ticket Creator",
  "version": "3.1.0",
  "description": "Erstellt GitLab-Issues aus E-Mails.",
  "author": "kirchner@visionconnect.de",
  "applications": {
    "gecko": {
      "id": "{fd1a5db1-ab67-4b72-9139-dc073a4dac2e}",
      "strict_min_version": "91.0",
      "update_url": "https://example.com/update.json"
    }
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "messagesRead",
    "storage",
    "menus",
    "tabs",
    "notifications"
  ],
  "background": {
    "scripts": [
      "dist/bundled-background.js"
    ]
  },
  "browser_action": {
    "allowed_spaces": [
      "mail"
    ],
    "default_title": "Create GitLab Issue",
    "default_icon": "icons/icon-48px.png"
  },
  "icons": {
    "16": "icons/icon-16px.png",
    "32": "icons/icon-32px.png",
    "48": "icons/icon-48px.png",
    "64": "icons/icon-64px.png"
  }
}